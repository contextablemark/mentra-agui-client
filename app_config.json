{
  "name": "AGUI Assistant",
  "description": "MentraOS app with agui backend integration",
  "version": "1.0.0",
  "permissions": [
    {
      "type": "MICROPHONE",
      "description": "To receive voice input for the assistant"
    }
  ],
  "settings": [
    {
      "type": "group",
      "title": "AG-UI Settings"
    },
    {
      "key": "AgUiBackend",
      "type": "text",
      "label": "AG-UI Backend URL",
      "placeholder": "http://localhost:8000/chat"
    },
    {
      "type": "group",
      "title": "Text Display Settings"
    },
    {
      "key": "scrollSpeed",
      "type": "slider",
      "label": "Text Scroll Speed (ms per line)",
      "defaultValue": 250,
      "min": 50,
      "max": 1000
    },
    {
      "key": "lineWidth",
      "type": "select",
      "label": "Characters Per Line",
      "defaultValue": 30,
      "options": [
        {"label": "Narrow (20)", "value": 20},
        {"label": "Medium (30)", "value": 30},
        {"label": "Wide (45)", "value": 45},
        {"label": "Very Wide (60)", "value": 60}
      ]
    },
    {
      "key": "textWrapping",
      "type": "toggle",
      "label": "Smart Text Wrapping",
      "defaultValue": true
    }
  ],
  "tools": []
}